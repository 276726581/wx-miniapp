
.img {
  width: 100%;
}

.content {
  padding: 20rpx 30rpx;
  word-break: break-all;
  background-color: white;
  font-size: 11pt;
}

.no-more {
  color: darkgray;
  width: 100%;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.phone {
  flex: 1;
  background-color: green;
  color: white;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.collect {
  flex: 1;
  background-color: red;
  color: white;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.label-width {
  min-width: 150rpx;
}

.text-overflow {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

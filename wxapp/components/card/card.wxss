/* components/card/index.wxss */
@import "/lib/layout.wxss";

.card {
  background-color: #fff;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.right-area {
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.thumb {
  width: 200rpx;
  height: 200rpx;
}

.title {
  color: #000;
  font-size: 14pt;
}

.price {
  color: red;
  font-size: 12pt;
  margin-top: 8rpx;
}

.info {
  margin-top: 10rpx;
}

.province {
  color: darkgray;
  font-size: 10pt;
}

.city {
  color: darkgray;
  font-size: 10pt;
  margin-left: 8rpx;
}

.date {
  color: darkgray;
  font-size: 10pt;
}
